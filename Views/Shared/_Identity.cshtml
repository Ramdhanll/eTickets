@inject UserManager<ApplicationUser> UserManager;

@if (!User.Identity.IsAuthenticated)
{

   <a class="btn btn-outline-success my-2 my-sm-0 mr-2" asp-controller="Account" asp-action="Login">
      <i class="fa fa-sign-in" aria-hidden="true"></i> Log in
   </a>

   <a class="btn btn-outline-primary my-2 my-sm-0" asp-controller="Account" asp-action="Register">
      <i class="fa fa-registered" aria-hidden="true"></i> Register
   </a>
}
else
{
   @* User profile section *@
   <div class="dropdown">
      <button class="btn btn-outline-success dropdown-toggle" type="button" id="profile-btn" data-toggle="dropdown"
      aria-expanded="false">
         <i class="fas fa-person-booth"></i> Hello @UserManager.GetUserName(User)
      </button>
      <ul class="dropdown-menu" aria-labelledby="profile-btn">
         <li>
            <a class="dropdown-item" asp-controller="Orders" asp-action="Index">
               <i class="fa fa-list" aria-hidden="true"></i> Orders
            </a>
         </li>
      </ul>
   </div>

   <span style="padding: 5px"></span>
   <form asp-controller="Account" asp-action="Logout">
      <button class="btn btn-outline-danger my-2 my-sm-0">
         <i class="fa fa-sign-out" aria-hidden="true"></i> Log out
      </button>
   </form>
}
